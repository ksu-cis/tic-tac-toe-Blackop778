@page
@model TicTacToe.Pages.TicTacToe2Model
@{
    ViewData["Title"] = "TicTacToe2";
}

<h2>TicTacToe2</h2>

<div id="grid-2">
    @for (int i = 0; i < Model.Board.GetLength(0); i += 1)
    {
    <div class="row">
        @for (int n = 0; n < Model.Board.GetLength(1); n += 1)
        {
            if (Model.Board[i, n] == 0)
            {
                <a href="#" class="square-2"></a>
            }
            else
            {
                <div class="square-2">@Model.Board[i, n]</div>
            }
        }
    </div>
    }
</div>
